<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
  xmlns:g='urn:import:com.google.gwt.user.client.ui'
  xmlns:mail='urn:import:com.webex.jcasandra.board.client'>

  <ui:style>
  .detail {
    border: 1px solid #666;
    background-color: white;
  }

  .header {
    background: #eee;
    border-bottom: 1px solid #666;
    padding: 0.5em;
  }

  .headerItem {
    margin-bottom:0.5em;
  }

  .body {
    line-height: 150%;
    padding: 20px 40px 20px 10px;
    font-family: 'Times New Roman', Times, serif;
  }
  </ui:style>

  <g:DockLayoutPanel unit='EM'>
    <g:center>
      <g:DecoratorPanel >
	      <g:HTMLPanel styleName='{style.header}'>
	        <p> -- Please click on target status key button to got value.</p>
	        <div class='{style.headerItem}'><b> Property Name:</b> <span ui:field='key'/></div>
	        <div class='{style.headerItem}'><b> String Value:</b> <span ui:field='value'/></div>
	      </g:HTMLPanel>
      </g:DecoratorPanel>
    </g:center>
  </g:DockLayoutPanel>

</ui:UiBinder>
